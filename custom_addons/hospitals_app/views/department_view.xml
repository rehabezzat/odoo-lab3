<odoo>
    <record id="department_tree_view" model="ir.ui.view">
        <field name="name">department.tree.view</field>
        <field name="model">hms.department</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="capacity"/>
                <field name="is_opened"/>

                <field name="patient_ids" optional="hide"/>
                <field name="doctor_ids" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="department_form_view" model="ir.ui.view">
        <field name="name">department.form.view</field>
        <field name="model">hms.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="capacity"/>
                        <field name="is_opened"/>

                        <field name="patient_ids"  widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospitals_department_action" model="ir.actions.act_window">
        <field name="name">Hospitals Department</field>
        <field name="res_model">hms.department</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menuitem_hospitals_department"
              name="All Departments"
              parent="menu_root_department"
              action="hospitals_department_action"/>
</odoo>